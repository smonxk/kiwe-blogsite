<%- include("partials/header.ejs") %>
<h1>New post</h1>
<form action="/submit" method="POST" id="new-post-form">
    <div id="create-post">
        <fieldset>
            <input type="text" name="title" placeholder="title" id="create-heading" required  oninput="validate(this)">
        </fieldset>
        <fieldset>
            <textarea name="content" id="create-content" placeholder="What's chirping here?" required  oninput="validate(this)"></textarea>
        </fieldset>    
    </div>
    <button type="submit">
        <i class="fa-solid fa-kiwi-bird"></i>&nbsp;&nbsp;Chirp
    </button>
</form>



